#:import platform kivy.utils.platform
<WindowManager>
    id: screen_manager

    Seite_1:
        id: main
        name: "Auswahl"
        manager: screen_manager

    OpenFile:
        id: openfile
        name: "Ordnerübersicht"
        manager: screen_manager

    Seite_2:
        id:data_tab
        name: "Übersicht"
        manager: screen_manager

<Seite_1>
    canvas.before:
        Color:
            rgba: 100,100,100,0.15
        Rectangle:
            pos: self.pos
            size: self.size
    btn: btn.__self__
    btn2:btn2.__self__
    btn3:btn3.__self__
    btn4:btn4.__self__
    label:label.__self__
    label2:label2.__self__
    label3:label3.__self__
    slider:slider.__self__
    textinput:textinput.__self__
    textinput2:textinput2.__self__

    MDTopAppBar:
        title: 'Youtube Download'
        pos_hint:{"top":1}
        left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
        elevation: 2

    FloatLayout:
        Label:
            size_hint_y: 0.12
            pos_hint: {"x":0.01, "top":0.94}
            text: "Bitte Dateiformat auswählen :"
            font_size: (root.width + root.height) / 8**2
            text_size:self.size
            halign:"left"

        Button:
            id: btn
            size_hint:0.98,0.07
            pos_hint: {"x":0.01,"top":0.81}
            font_size: (root.width + root.height) / 8**2
            text: "Video(mp4)"
            on_press:
                root.add_Dropdown(0)

    FloatLayout:
        Label:
            size_hint_y: 0.12
            pos_hint: {"x":0.01, "top":0.82}
            text: "Bitte Auflösung auswählen: "
            font_size: (root.width + root.height) / 8**2
            text_size:self.size
            halign:"left"

        Button:
            id: btn2
            disabled: False
            size_hint:0.98,0.07
            pos_hint: {"x":0.01, "top":0.69}
            font_size: (root.width + root.height) / 8**2
            text: "1080p"
            on_press:
                root.add_Dropdown(1)

    FloatLayout:
        Label:
            id:label
            size_hint_y: 0.12
            pos_hint: {"x":0.01, "top":0.70}
            text: "Bitte Zielordner auswählen: "
            font_size: (root.width + root.height) / 8**2
            text_size:self.size
            halign:"left"

        TextInput:
            id:textinput
            focus:True
            pos_hint: {"x":0.01, "top":0.57}
            size_hint:0.66,0.07
            multiline: False
            font_size: (root.width + root.height) / 8**2

        Button:
            pos_hint: {"x":0.67, "top":0.569}
            size_hint:0.32,0.07
            font_size: (root.width + root.height) / 8**2
            text: "Durchsuchen"
            on_press:
                app.change_screen("Ordnerübersicht")
                root.setVal(0)

    FloatLayout:
        Label:
            size_hint_y: 0.12
            pos_hint: {"x":0.01, "top":0.58}
            text: "Bitte Modus auswählen: "
            font_size: (root.width + root.height) / 8**2
            text_size:self.size
            halign:"left"

        Button:
            id: btn3
            pos_hint: {"x":0.01, "top":0.45}
            size_hint:0.98,0.07
            font_size: (root.width + root.height) / 8**2
            text: "einzelnes Video herunterladen"
            on_press:
                root.add_Dropdown(2)

    FloatLayout:
        Label:
            id: label2
            size_hint_y: 0.12
            pos_hint: {"x":0.01, "top":0.46}
            text: "Bitte Link eingeben: "
            font_size: (root.width + root.height) / 8**2
            text_size:self.size
            halign:"left"

        TextInput:
            id:textinput2
            focus:True
            pos_hint: {"x":0.01, "top":0.33}
            size_hint:0.66,0.07
            multiline: False
            font_size: (root.width + root.height) / 8**2

        Button:
            id:btn4
            pos_hint: {"x":0.67, "top":0.329}
            size_hint:0.32,0.07
            disabled: True
            font_size: (root.width + root.height) / 8**2
            text: "Durchsuchen"
            on_press:
                app.change_screen("Ordnerübersicht")
                root.setVal(1)

    FloatLayout:
        Label:
            size_hint_y: 0.12
            pos_hint: {"x":0.01, "top":0.34}
            text: "Treffer: "
            font_size: (root.width + root.height) / 8**2
            text_size:self.size
            halign:"left"

        Slider:
            id:slider
            pos_hint: {"x":0.01, "top":0.22}
            size_hint:0.98,0.07
            disabled: True
            min:1
            max:10
            step:1
            orientation: "horizontal"

        Label:
            id:label3
            disabled: True
            size_hint:0.1,0.12
            pos_hint: {"x":0.5, "top":0.32}
            font_size: (root.width + root.height) / 8**2
            text:str(slider.value)
            text_size:self.size

        MDFloatingActionButton:
            icon: 'arrow-right'
            size_hint_y: 0.06
            width:self.height
            pos_hint: {"x":0.46, "top":0.13}
            on_press:
                root.check_entry()
                if root.checked: app.add_datatable(root.getData())

    MDNavigationLayout:
        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)
            MDBoxLayout:
                orientation: 'vertical'
                MDNavigationDrawerMenu:
                    OneLineIconListItem:
                        text: "Beenden"
                        on_press: app.stop()
                        IconLeftWidget:
                            icon: "arrow-left-bold-box-outline"
                            on_press: app.stop()

                    OneLineIconListItem:
                        text: "https://www.youtube.com/"
                        on_press: root.open_url()
                        IconLeftWidget:
                            icon: "link"
                            on_press: root.open_url()

