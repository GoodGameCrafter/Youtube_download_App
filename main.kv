<Seite_2>
    canvas.before:
        Color:
            rgba: 100,100,100,0.15
        Rectangle:
            pos: self.pos
            size: self.size


    label:label.__self__
    percent:percent.__self__
    pb_1:pb_1.__self__
    percent2:percent2.__self__
    pb_2:pb_2.__self__
    btn:btn.__self__
    btn2:btn2.__self__
    btn3:btn3.__self__

    MDTopAppBar:
        pos_hint:{"top":1}
        left_action_items: [["arrow-left", lambda x: [app.stop_update(),root.manager.ids.data_tab.resetBtn(),app.change_screen('Auswahl')]]]
        right_action_items: [["printer",lambda x: app.print_List()],["update", lambda x: [app.add_datatable(root.manager.ids.main.getData()),root.manager.ids.data_tab.resetBtn()]]]
        elevation: 2

    FloatLayout:
        Label:
            size_hint: 0.38,0.12
            pos_hint: {"x":0.01, "top":0.295}
            font_size: (root.width + root.height) / 8**2
            text:"Fortschritt:"
            text_size:self.size
            halign:"center"

        Label:
            id: percent
            size_hint:0.58,0.12
            pos_hint: {"x":0.4, "top":0.315}
            font_size: (root.width + root.height) / 10**2
            text:"0 %"
            text_size:self.size
            halign:"center"

        MDProgressBar:
            id:pb_1
            min:0
            max:100
            pos_hint: {"x":0.4, "top":0.195}
            size_hint_x: 0.58

        Label:
            size_hint: 0.38, 0.12
            pos_hint: {"x":0.01, "top":0.245}
            font_size: (root.width + root.height) / 8**2
            text:"Gesamtfortschritt:"
            text_size:self.size
            halign:"center"

        Label:
            id: percent2
            size_hint:0.58,0.12
            pos_hint: {"x":0.4, "top":0.265}
            font_size: (root.width + root.height) / 10**2
            text:"0 %"
            text_size:self.size
            halign:"center"

        MDProgressBar:
            id:pb_2
            min:0
            max:100
            pos_hint: {"x":0.4, "top":0.145}
            size_hint_x: 0.58

        Button:
            id:btn
            text: "Start"
            size_hint:0.25,0.06
            pos_hint: {"x":0.25, "top":0.1}
            font_size: (root.width + root.height) / 8**2
            on_press:
                app.Start() if self.text == "Start" else app.Weiter()

        Button:
            id:btn2
            disabled: True
            size_hint:0.25,0.06
            pos_hint: {"x":0.51, "top":0.1}
            font_size: (root.width + root.height) / 8**2
            text: "Pause"
            on_press: app.Pause()

        Button:
            id:btn3
            size_hint:0.25,0.06
            pos_hint: {"x":1.5, "top":0.1}
            font_size: (root.width + root.height) / 8**2
            text: "Beenden"
            on_press: app.stop()

        FloatLayout:
            id: data_layout

        Label:
            id:label
            size_hint_y: 0.2
            pos_hint: {"x":0.01, "top":0.7}
            font_size: (root.width + root.height) / 8**2
            text_size:self.size
            halign:"center"
